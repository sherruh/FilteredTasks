<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardElevation="4dp"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chbx_in_work"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chbx_done"
                android:layout_below="@id/chbx_in_work"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/vh_task_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="40sp"
                android:layout_toRightOf="@id/chbx_in_work"
                android:layout_marginLeft="40dp"
                android:text="Title"
                android:textStyle="bold"
                android:layout_toEndOf="@id/chbx_in_work"
                android:layout_marginStart="40dp" />

            <TextView
                android:id="@+id/vh_task_message"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="40sp"
                android:layout_toRightOf="@id/chbx_done"
                android:layout_below="@id/vh_task_title"
                android:layout_marginLeft="20dp"
                android:text="Message"
                android:layout_toEndOf="@id/chbx_done"
                android:layout_marginStart="20dp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>